{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "composite": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**/*"
  ]
}